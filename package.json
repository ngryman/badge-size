{
  "name": "badge-size",
  "version": "0.3.0",
  "description": "Displays the size of a given file in your repository",
  "author": "Nicolas Gryman <ngryman@gmail.com> (http://ngryman.sh)",
  "license": "MIT",
  "repository": "ngryman/badge-size",
  "main": "index.js",
  "engines": {
    "node": ">=4"
  },
  "files": [
    "index.js"
  ],
  "scripts": {
    "lint": "eslint *.js",
    "unit": "nyc ava",
    "start": "micro index.js -p ${PORT:=3000}",
    "test": "npm run lint -s && npm run unit -s",
    "dev": "npm run unit -- --watch",
    "coverage": "nyc report --reporter=text-lcov | codecov",
    "check-coverage": "nyc check-coverage --lines 95 --functions 95 --branches 95"
  },
  "precommit": [
    "test",
    "check-coverage"
  ],
  "keywords": [
    "badge",
    "ci",
    "github",
    "gzip",
    "jpg",
    "png",
    "readme",
    "repository",
    "size",
    "svg",
    "weight"
  ],
  "dependencies": {
    "got": "^6.3.0",
    "gzip-size": "^2.0.3",
    "micro": "^4.1.1",
    "pretty-bytes": "^2.0.1"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel": "^5.8.38",
    "babel-eslint": "^6.1.2",
    "codecov.io": "^0.1.6",
    "eslint": "^3.1.0",
    "eslint-config-ngryman": "^1.1.0",
    "nyc": "^7.0.0",
    "pre-commit": "^1.1.3",
    "test-listen": "^1.0.0"
  }
}
