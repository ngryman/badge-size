{
  "name": "badge-size",
  "version": "0.3.0",
  "description": "Displays the size of a given file in your repository",
  "author": "Nicolas Gryman <ngryman@gmail.com> (http://ngryman.sh)",
  "license": "MIT",
  "repository": "ngryman/badge-size",
  "main": "index.js",
  "engines": {
    "node": ">=0.12"
  },
  "files": [
    "index.js"
  ],
  "scripts": {
    "lint": "eslint *.js",
    "spec": "mocha --compilers js:babel/register --slow 10000 test.js",
    "start": "babel-node index.js",
    "test": "npm run lint -s && npm run spec -s",
    "watch": "onchange *.js -- npm test"
  },
  "keywords": [
    "badge",
    "ci",
    "github",
    "gzip",
    "jpg",
    "png",
    "readme",
    "repository",
    "size",
    "svg",
    "weight"
  ],
  "dependencies": {
    "babel": "^6.5.2",
    "got": "^6.3.0",
    "gzip-size": "^3.0.0",
    "hapi": "^13.5.0",
    "pretty-bytes": "^3.0.1"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "eslint": "^3.1.0",
    "eslint-config-ngryman": "^1.1.0",
    "inject-then": "^2.0.0",
    "mocha": "^2.2.5",
    "onchange": "^2.5.0"
  }
}
